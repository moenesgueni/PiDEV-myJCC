<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ColorPicker?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>


<AnchorPane id="AnchorPane" prefHeight="910.0" prefWidth="1770.0" xmlns:fx="http://javafx.com/fxml/1" xmlns="http://javafx.com/javafx/19" fx:controller="Controllers.PhotographePaletteController">
   <children>
      <HBox fx:id="paletteBox" prefHeight="200.0" prefWidth="200.0" AnchorPane.bottomAnchor="80.0" AnchorPane.leftAnchor="100.0" AnchorPane.rightAnchor="100.0" />
      <Label text="Votre Palette :" AnchorPane.bottomAnchor="300.0" AnchorPane.leftAnchor="100.0">
         <font>
            <Font size="36.0" />
         </font>
      </Label>
      <Label text="Coisissez une ou plusieurs couleur :" AnchorPane.leftAnchor="100.0" AnchorPane.topAnchor="50.0">
         <font>
            <Font size="48.0" />
         </font>
      </Label>
      <VBox prefHeight="200.0" prefWidth="100.0" AnchorPane.bottomAnchor="400.0" AnchorPane.leftAnchor="100.0" AnchorPane.rightAnchor="100.0" AnchorPane.topAnchor="150.0">
         <children>
            <ColorPicker fx:id="color1_picker" onAction="#color1_pickerHandler" prefHeight="33.0" prefWidth="160.0" />
            <ColorPicker fx:id="color2_picker" onAction="#color2_pickerHandler" prefHeight="33.0" prefWidth="160.0">
               <VBox.margin>
                  <Insets top="20.0" />
               </VBox.margin>
            </ColorPicker>
            <ColorPicker fx:id="color3_picker" onAction="#color3_pickerHandler" prefHeight="33.0" prefWidth="160.0">
               <VBox.margin>
                  <Insets top="20.0" />
               </VBox.margin>
            </ColorPicker>
            <ColorPicker fx:id="color4_picker" onAction="#color4_pickerHandler" prefHeight="33.0" prefWidth="160.0">
               <VBox.margin>
                  <Insets top="20.0" />
               </VBox.margin>
            </ColorPicker>
            <Label fx:id="errorMessage" text="Veuillez choisir au minimum une couleur !!" textFill="#e40505">
               <font>
                  <Font size="14.0" />
               </font>
               <VBox.margin>
                  <Insets top="30.0" />
               </VBox.margin>
            </Label>
            <Button fx:id="genererUnePalette" mnemonicParsing="false" text="Générer">
               <VBox.margin>
                  <Insets top="20.0" />
               </VBox.margin>
               <font>
                  <Font size="24.0" />
               </font>
            </Button>
         </children>
      </VBox>
   </children>
</AnchorPane>
